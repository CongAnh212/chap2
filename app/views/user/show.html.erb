<div>
  <h1 class="text-3xl font-bold">User Details</h1>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <br>

  <div class="flex">
    <%= link_to 'Edit', edit_user_path(@user), class: 'bg-blue-400 text-white py-2 px-4 rounded' %>
    <%= link_to 'Back', '/user', class: 'bg-blue-400 text-white py-2 px-4 rounded' %>
  </div>
</div>
