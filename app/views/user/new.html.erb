<%= form_with model: @user, url: '/user', local: true, html: { class: 'user-form-container' } do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>
  <div class="mb-4">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-input" %>
  </div>
  <div>
    <%= form.submit "Create User", class: "submit-button" %>
  </div>
<% end %>

