<div>
  <h1>This is the Micropost Page</h1>
  <table>
    <thead>
    <tr>
      <th>Content</th>
      <th>User ID</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td>
          <%= link_to 'Show', micropost_path(micropost), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_micropost_path(micropost), class: 'btn btn-warning' %>
          <%= form_with(model: micropost, url: micropost_path(micropost), method: :delete, local: true) do %>
            <%= button_to 'Destroy', micropost_path(micropost), method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-button' %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'Add Micropost', new_micropost_path, class: 'btn btn-primary' %>

  <% if alert %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
  <% end %>
</div>
